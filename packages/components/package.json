{
  "name": "@jackie733/prism",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./themes.css": "./dist/themes.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist && rollup -c && pnpm run copy:themes",
    "types": "vue-tsc -p tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist",
    "copy:themes": "node ./scripts/copy-themes.js",
    "prepublishOnly": "pnpm run build && pnpm run types"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "typescript": "^5.5.0",
    "vue": "^3.4.0"
  }
}
