{
  "name": "@jackie733/prism",
  "version": "0.2.5",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=22"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./themes.css": "./dist/themes.css",
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "./dist/themes.css",
    "./dist/style.css"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist && vite build && pnpm run copy:themes",
    "types": "vue-tsc -p tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist",
    "copy:themes": "node ./scripts/copy-themes.js",
    "prepublishOnly": "pnpm run build && pnpm run types"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "rimraf": "^6.0.1",
    "vite": "^7.1.4",
    "vue": "^3.4.0"
  }
}
